{
  "name": "webhook-manager",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "lerna run dev --parallel",
    "dev:frontend": "lerna run dev --scope=@webhook-manager/frontend",
    "dev:backend": "lerna run dev --scope=@webhook-manager/backend",
    "build": "lerna run build",
    "test": "lerna run test",
    "start:prod": "pm2 start ecosystem.config.js",
    "clean": "lerna clean -y && rm -rf node_modules"
  },
  "devDependencies": {
    "lerna": "^8.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
